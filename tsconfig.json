{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "typeRoots": [
            "./typings",
            "./node_modules/@types"
        ],
        "module": "commonjs",
        "target": "esnext",
        "jsx": "react",
        "lib": [
            "dom",
            "esnext"
        ],
        "noUnusedLocals": false
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
